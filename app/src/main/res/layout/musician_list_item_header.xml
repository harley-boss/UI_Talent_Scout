<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/tvArtistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ps_bold"
        android:text="Placeholder"
        android:textColor="@color/color1"
        android:paddingStart="16dp"
        android:lineSpacingExtra="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/imgItemTitle"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemTitle"
        app:layout_constraintLeft_toLeftOf="@+id/imgItemTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>